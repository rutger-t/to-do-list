<% provide(:title, "New") %>
  <h1><%= t "new.title" %></h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@task) do |f| %>
      <%= render 'shared/task_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.submit "Create Task", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

    &nbsp;
    
