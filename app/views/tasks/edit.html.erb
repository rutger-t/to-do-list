<% provide(:title, "Edit") %>

<h1>Edit Task</h1>

<%= form_for(@task) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Save Changes"%>
  <% end %>
 
  &nbsp;

  <p> <%= link_to "delete", @task, method: :delete,
  data: { confirm: "You sure?" }, class: "btn btn-danger btn-md" %></p>
  <p> <%= link_to "home", root_path, class: "btn btn-primary btn-md" %></p>