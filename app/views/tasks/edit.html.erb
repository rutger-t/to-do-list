<% provide(:title, "Edit") %>

<h1><%= t "edit.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(@task) do |f| %>
  <%= render 'shared/task_error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>

    <%= f.submit "Edit Task", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>

  &nbsp;

  <p> <%= link_to t("links.delete"), @task, method: :delete,
  data: { confirm: "You sure?" }, class: "btn btn-danger btn-md" %></p>
  <p> <%= link_to t("links.home"), root_path, class: "btn btn-primary btn-md" %></p>