<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<table>
  <tr>
    <th>name</th>
    <th>description</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.name, task_path(task) %></td>
      <td><%= task.description %></td>
      <td><%= link_to "delete", task, method: :delete,
      data: { confirm: "You sure?" } %></td>
      <td><%= link_to "edit", edit_task_path(task) %></td>
    </tr>
  <% end %>
</table>
<p> <%= link_to "add", register_path(@task) %></p>
