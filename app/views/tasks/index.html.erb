<% provide(:title, "Home") %>

<h1>Home</h1>
<p>List of all tasks</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>name</th>
      <th>description</th>
      <th>delete</th>
      <th>edit</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.description %></td>
        <td><%= link_to "delete", task, method: :delete,
        data: { confirm: "You sure?" }, class: "btn btn-danger btn-xs" %></td>
        <td><%= link_to "edit", edit_task_path(task), class: "btn btn-primary btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

&nbsp;

<center>
<p> <%= link_to "add", register_path(@task), class: "btn btn-primary btn-lg" %></p>
</center>

